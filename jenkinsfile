pipeline {
    agent any
    tools {
        jdk 'java8'
        maven 'slave'
    }
    environment {
        remote1="ec2-user@65.1.134.187"
    }
    parameters {
        string(name:'Env', defaultValue:'Linux', description:"Linu Environment")
        booleanParam(name:'polar', defaultValue:true, description: 'contional')
        choice(name:'poll', choices:[7,8,9], description:'choose')
    }
    stages {
        stage ('Compile') {
            steps { 
                script {
                    echo "Welcome to COMPILE STAGE : ${params.Env}"
                    sh 'mvn compile'
                }
            }
        }
        stage ('Test') {
            //agent {
            //    label 'worker1'
            //   }
            when {
                    expression {
                        params.polar == true
                    }
            }   
            steps { 
                script {
                    echo "Welcome to TEST STAGE : ${params.Env}"
                    sh 'mvn test'
                }
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage ('Package') {
            steps { 
                script {
                    sshagent(['remoteuser']) {
                        echo "Welcome to PACKAGE STAGE : ${params.Env}"
                        sh "scp -o StrictHostKeyChecking=no server_cfg.sh ${remote1}:/home/ec2-user"
                        sh "ssh -o StrictHostKeyChecking=no ${remote1} 'bash ~/server_cfg.sh'"

                    }
                    
                }
            }
        }
    }
}